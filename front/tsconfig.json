{
  "compilerOptions": {
    "module": "system",
    "noImplicitAny": false,
    "lib": ["es2020", "dom"],
    "downlevelIteration": true,
    "target": "es2020",
    "moduleResolution": "node",
    "baseUrl": ".",
    "rootDirs": ["src"],
    "paths": {
      "*": ["*"]
    }
  },
  "projectOptions": {
    "checkJs": true,
    "allowJs": true
  },
  "include": "src/**/*",
  "exclude": ["node_modules"]
}
